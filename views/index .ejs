  <h1>Add a new book</h1
<form class="pure-form pure-form-aligned">
<fieldset>
    <form action="/books" class="form-inline" method="POST">
    <div class="pure-form-pure-form-aligned
    ">
      <label for="title">Title: </label>
      <input type="text" name="book[title]" id="title" class="form-control" autofocus>
    </div>
    <div class="pure-form-pure-form-aligned
    ">
      <label for="author">Author: </label>
      <input type="text" name="book[author]" id="author" class="form-control" autofocus>
    </div>
    <div class="pure-form-pure-form-aligned
    ">
      <label for="year">Year: </label>
      <input type="text" name="book[year]" id="year" class="form-control" autofocus>
    </div>
    <button type="submit" class="pure-button pure-button-primary">Create</button>
  </form>
  </fieldset>
  </form>
